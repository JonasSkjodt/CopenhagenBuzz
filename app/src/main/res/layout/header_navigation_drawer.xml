<?xml version="1.0" encoding="utf-8"?>
<!--
header navigation drawer
https://developer.android.com/guide/navigation/integrations/ui#add_a_navigation_drawer
https://github.com/material-components/material-components-android/blob/master/docs/components/NavigationDrawer.md
-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <!-- User Photo -->
    <ImageView
        android:id="@+id/header_nav_image_user_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/round_account_circle_24"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/navigation_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <!-- User Name -->
    <TextView
        style="?textAppearanceHeadlineSmall"
        android:id="@+id/header_nav_text_user_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/navigation_user_name"
        android:layout_marginTop="18dp"
        app:layout_constraintStart_toEndOf="@id/header_nav_image_user_photo"
        app:layout_constraintTop_toBottomOf="@id/header_nav_image_user_photo"
        />
    <!-- User Email -->
    <TextView
        android:id="@+id/header_nav_text_user_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/navigation_user_email"
        app:layout_constraintStart_toEndOf="@id/header_nav_text_user_name"
        app:layout_constraintTop_toBottomOf="@id/header_nav_text_user_name"
        />

    <Button
        android:id="@+id/header_nav_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/header_nav_text_user_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>